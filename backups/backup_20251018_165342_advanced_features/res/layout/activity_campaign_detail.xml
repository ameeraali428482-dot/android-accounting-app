<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.campaign.CampaignDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/campaign_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل الحملة التسويقية"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم الحملة"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_type_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نوع الحملة"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الوصف"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_start_date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ البدء (YYYY-MM-DD)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_end_date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ الانتهاء (YYYY-MM-DD)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campaign_status_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الحالة"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_campaign_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ الحملة"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/delete_campaign_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف الحملة"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>
