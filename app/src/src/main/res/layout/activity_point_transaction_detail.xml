<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pointtransaction.PointTransactionDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/point_transaction_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل معاملة النقاط"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النوع"/>

        <Spinner
            android:id="@+id/point_transaction_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/point_transaction_points_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="النقاط"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/point_transaction_date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="التاريخ (YYYY-MM-DD)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_point_transaction_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ معاملة النقاط"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/delete_point_transaction_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف معاملة النقاط"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>
