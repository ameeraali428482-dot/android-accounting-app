<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.connection.ConnectionDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/connection_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل الاتصال"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/connection_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم الاتصال"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/connection_type_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نوع الاتصال"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/connection_status_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الحالة"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ الاتصال"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/delete_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف الاتصال"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>
