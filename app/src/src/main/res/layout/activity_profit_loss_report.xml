<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.reports.ProfitLossReportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تقرير الأرباح والخسائر" 
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/total_income_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إجمالي الإيرادات: 0.00" 
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/total_expenses_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إجمالي المصروفات: 0.00" 
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/net_profit_loss_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="صافي الربح/الخسارة: 0.00" 
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout>
