<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- الثيم الرئيسي للتطبيق -->
    <style name="Theme.OnSale" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ألوان الثيم الأساسية -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/error</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- دعم AppBar و Toolbar -->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>
        <item name="materialButtonStyle">@style/Button.OnSale</item>

        <!-- إعدادات Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.OnSale.HeadlineLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.OnSale.HeadlineMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.OnSale.HeadlineSmall</item>
        <item name="textAppearanceBody1">@style/TextAppearance.OnSale.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.OnSale.BodyMedium</item>

        <!-- إعدادات إضافية -->
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- ثيم الشاشة الافتتاحية -->
    <style name="Theme.OnSale.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
    </style>

    <!-- ثيم عام بدون شريط علوي -->
    <style name="Theme.OnSale.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
