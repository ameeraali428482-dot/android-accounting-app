<?xml version='1.0' encoding='utf-8'?>
<resources xmlns:ns0="http://schemas.android.com/tools">
    
    <style name="Theme.AndroidApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" ns0:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

<style name="Theme.AndroidApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/white</item>
</style>
    <style name="Theme.AndroidApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AndroidApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="Widget.AndroidApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AndroidApp.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <style name="Widget.AndroidApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AndroidApp.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
    </style>
    
    <style name="Widget.AndroidApp.Card" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AndroidApp.Card</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    
    <style name="ThemeOverlay.AndroidApp.Button" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
    </style>
    
    <style name="ThemeOverlay.AndroidApp.Card" parent="">
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    
    <style name="TextAppearance.AndroidApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/on_surface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.AndroidApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_surface</item>
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>