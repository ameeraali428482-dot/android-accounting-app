<?xml version="1.0" encoding="utf-8"?>
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sharedlink.SharedLinkDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/shared_link_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل الرابط المشترك"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/shared_link_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم الرابط"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/shared_link_url_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الرابط"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/shared_link_expires_at_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ الانتهاء (YYYY-MM-DD)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_shared_link_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ الرابط"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/delete_shared_link_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف الرابط"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>
