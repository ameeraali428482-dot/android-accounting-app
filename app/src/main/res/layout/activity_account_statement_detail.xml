<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.accountstatement.AccountStatementDetailActivity">

    <EditText
        android:id="@+id/et_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تاريخ المعاملة (YYYY-MM-DD)"
        android:inputType="date" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الوصف"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <EditText
        android:id="@+id/et_debit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="مدين"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="دائن"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_reference_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نوع المرجع (مثال: فاتورة، دفع)"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/et_reference_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="معرف المرجع"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_save_statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="حفظ كشف الحساب" />

</LinearLayout>
