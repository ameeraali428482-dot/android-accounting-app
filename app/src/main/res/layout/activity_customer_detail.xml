<?xml version="1.0" encoding="utf-8"?>
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.customer.CustomerDetailActivity">

    <EditText
        android:id="@+id/customer_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اسم العميل"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/customer_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="البريد الإلكتروني"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/customer_phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="رقم الهاتف"
        android:inputType="phone"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/customer_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="العنوان"
        android:inputType="textPostalAddress"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/save_customer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="حفظ العميل" />

    <Button
        android:id="@+id/delete_customer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="حذف العميل" />

</LinearLayout>
