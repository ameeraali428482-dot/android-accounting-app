<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحباً بك!" 
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/items_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="إدارة الأصناف" />

    <Button
        android:id="@+id/customers_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة العملاء" />

    <Button
        android:id="@+id/suppliers_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الموردين" />

    <Button
        android:id="@+id/invoices_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الفواتير" />

    <Button
        android:id="@+id/reports_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="التقارير والتحليلات" />

    <Button
        android:id="@+id/employees_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الموظفين" />

    <Button
        android:id="@+id/payrolls_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة كشوف المرتبات" />

    <Button
        android:id="@+id/notifications_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="الإشعارات" />

    <Button
        android:id="@+id/reminders_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="التذكيرات" />

    <Button
        android:id="@+id/campaigns_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الحملات" />

    <Button
        android:id="@+id/accounts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الحسابات" />

    <Button
        android:id="@+id/journal_entries_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="قيود اليومية" />

    <Button
        android:id="@+id/vouchers_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="السندات" />

    <Button
        android:id="@+id/connections_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الاتصالات" />

    <Button
        android:id="@+id/shared_links_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="الروابط المشتركة" />

    <Button
        android:id="@+id/company_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إعدادات الشركة" />

    <Button
        android:id="@+id/point_transactions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="سجل النقاط" />

    <Button
        android:id="@+id/rewards_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة المكافآت" />

    <Button
        android:id="@+id/user_rewards_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="مكافآت المستخدمين" />

    <Button
        android:id="@+id/repairs_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الإصلاحات" />

    <Button
        android:id="@+id/orders_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="إدارة الطلبيات" />

    <Button
        android:id="@+id/chats_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="المحادثات" />

    <Button
        android:id="@+id/google_drive_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="النسخ الاحتياطي إلى Google Drive" />

    <Button
        android:id="@+id/ai_analysis_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="تحليل مالي بالذكاء الاصطناعي" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="تسجيل الخروج" />

</LinearLayout>
