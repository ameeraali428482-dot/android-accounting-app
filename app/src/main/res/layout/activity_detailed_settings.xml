<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<ScrollView xmlns:android=\"http://schemas.android.com/apk/res/android\"\n    xmlns:app=\"http://schemas.android.com/apk/res-auto\"\n    android:layout_width=\"match_parent\"\n    android:layout_height=\"match_parent\"\n    android:background=\"@color/background_light\"\n    android:padding=\"16dp\">\n\n    <LinearLayout\n        android:layout_width=\"match_parent\"\n        android:layout_height=\"wrap_content\"\n        android:orientation=\"vertical\">\n\n        <!-- شريط الأدوات -->\n        <androidx.appcompat.widget.Toolbar\n            android:id=\"@+id/toolbar\"\n            android:layout_width=\"match_parent\"\n            android:layout_height=\"?attr/actionBarSize\"\n            android:background=\"@color/primary\"\n            android:theme=\"@style/ThemeOverlay.AppCompat.Dark.ActionBar\"\n            app:title=\"الإعدادات المفصلة\"\n            app:titleTextColor=\"@android:color/white\" />\n\n        <!-- قسم إعدادات الفواتير -->\n        <com.google.android.material.card.MaterialCardView\n            android:layout_width=\"match_parent\"\n            android:layout_height=\"wrap_content\"\n            android:layout_marginTop=\"16dp\"\n            app:cardCornerRadius=\"12dp\"\n            app:cardElevation=\"4dp\">\n\n            <LinearLayout\n                android:layout_width=\"match_parent\"\n                android:layout_height=\"wrap_content\"\n                android:orientation=\"vertical\"\n                android:padding=\"16dp\">\n\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إعدادات الفواتير\"\n                    android:textColor=\"@color/primary\"\n                    android:textSize=\"18sp\"\n                    android:textStyle=\"bold\"\n                    android:gravity=\"center\"\n                    android:layout_marginBottom=\"16dp\" />\n\n                <!-- إظهار تفاصيل العميل -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_customer_details\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار تفاصيل العميل\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار أكواد الأصناف -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_item_codes\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار أكواد الأصناف\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار وصف الأصناف -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_item_descriptions\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار وصف الأصناف\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار أسعار الوحدة -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_unit_prices\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار أسعار الوحدة\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الكميات -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_quantities\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الكميات\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الأسعار الإجمالية -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_total_prices\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الأسعار الإجمالية\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الضرائب -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_taxes\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الضرائب\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الخصم -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_discount\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الخصم\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الملاحظات -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_notes\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الملاحظات\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار شعار الشركة -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_company_logo\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار شعار الشركة\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار ختم الشركة -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_company_stamp\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار ختم الشركة\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار الباركود -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_barcode\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار الباركود\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار رمز QR -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_qr_code\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار رمز QR\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار شروط الدفع -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_payment_terms\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار شروط الدفع\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار تاريخ الاستحقاق -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_due_date\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار تاريخ الاستحقاق\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- حساب الضريبة تلقائياً -->\n                <CheckBox\n                    android:id=\"@+id/cb_auto_calculate_tax\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"حساب الضريبة تلقائياً\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- حفظ الفواتير تلقائياً -->\n                <CheckBox\n                    android:id=\"@+id/cb_auto_save_invoices\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"حفظ الفواتير تلقائياً\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- طباعة بعد الحفظ -->\n                <CheckBox\n                    android:id=\"@+id/cb_print_after_save\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"طباعة بعد الحفظ\"\n                    android:textSize=\"16sp\" />\n\n            </LinearLayout>\n\n        </com.google.android.material.card.MaterialCardView>\n\n        <!-- قسم الميزات الصوتية والذكية -->\n        <com.google.android.material.card.MaterialCardView\n            android:layout_width=\"match_parent\"\n            android:layout_height=\"wrap_content\"\n            android:layout_marginTop=\"16dp\"\n            app:cardCornerRadius=\"12dp\"\n            app:cardElevation=\"4dp\">\n\n            <LinearLayout\n                android:layout_width=\"match_parent\"\n                android:layout_height=\"wrap_content\"\n                android:orientation=\"vertical\"\n                android:padding=\"16dp\">\n\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"الميزات الصوتية والذكية\"\n                    android:textColor=\"@color/primary\"\n                    android:textSize=\"18sp\"\n                    android:textStyle=\"bold\"\n                    android:gravity=\"center\"\n                    android:layout_marginBottom=\"16dp\" />\n\n                <!-- تفعيل الإدخال الصوتي -->\n                <CheckBox\n                    android:id=\"@+id/cb_voice_input_enabled\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"تفعيل الإدخال الصوتي\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- تفعيل تحويل النص إلى كلام -->\n                <CheckBox\n                    android:id=\"@+id/cb_tts_enabled\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"تفعيل تحويل النص إلى كلام\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- تفعيل الاقتراحات الذكية -->\n                <CheckBox\n                    android:id=\"@+id/cb_suggestions_enabled\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"تفعيل الاقتراحات الذكية\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- القراءة التلقائية -->\n                <CheckBox\n                    android:id=\"@+id/cb_auto_read_enabled\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"القراءة التلقائية عند فتح الصفحات\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- الإدخال الصوتي في البحث -->\n                <CheckBox\n                    android:id=\"@+id/cb_voice_in_search\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"الإدخال الصوتي في البحث\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- الإدخال الصوتي في النماذج -->\n                <CheckBox\n                    android:id=\"@+id/cb_voice_in_forms\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"الإدخال الصوتي في النماذج\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- الإدخال الصوتي في الفواتير -->\n                <CheckBox\n                    android:id=\"@+id/cb_voice_in_invoices\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"الإدخال الصوتي في الفواتير\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"16dp\" />\n\n                <!-- سرعة تحويل النص إلى كلام -->\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"سرعة تحويل النص إلى كلام\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <LinearLayout\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:orientation=\"horizontal\"\n                    android:layout_marginBottom=\"16dp\">\n\n                    <SeekBar\n                        android:id=\"@+id/sb_tts_speed\"\n                        android:layout_width=\"0dp\"\n                        android:layout_height=\"wrap_content\"\n                        android:layout_weight=\"1\"\n                        android:max=\"200\"\n                        android:progress=\"80\" />\n\n                    <TextView\n                        android:id=\"@+id/tv_tts_speed_value\"\n                        android:layout_width=\"wrap_content\"\n                        android:layout_height=\"wrap_content\"\n                        android:text=\"0.8\"\n                        android:textSize=\"16sp\"\n                        android:layout_marginStart=\"16dp\" />\n\n                </LinearLayout>\n\n                <!-- مهلة التسجيل الصوتي -->\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"مهلة التسجيل الصوتي\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <LinearLayout\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:orientation=\"horizontal\">\n\n                    <SeekBar\n                        android:id=\"@+id/sb_voice_timeout\"\n                        android:layout_width=\"0dp\"\n                        android:layout_height=\"wrap_content\"\n                        android:layout_weight=\"1\"\n                        android:max=\"15\"\n                        android:progress=\"5\" />\n\n                    <TextView\n                        android:id=\"@+id/tv_voice_timeout_value\"\n                        android:layout_width=\"wrap_content\"\n                        android:layout_height=\"wrap_content\"\n                        android:text=\"5 ثواني\"\n                        android:textSize=\"16sp\"\n                        android:layout_marginStart=\"16dp\" />\n\n                </LinearLayout>\n\n            </LinearLayout>\n\n        </com.google.android.material.card.MaterialCardView>\n\n        <!-- قسم إعدادات التخصيص -->\n        <com.google.android.material.card.MaterialCardView\n            android:layout_width=\"match_parent\"\n            android:layout_height=\"wrap_content\"\n            android:layout_marginTop=\"16dp\"\n            app:cardCornerRadius=\"12dp\"\n            app:cardElevation=\"4dp\">\n\n            <LinearLayout\n                android:layout_width=\"match_parent\"\n                android:layout_height=\"wrap_content\"\n                android:orientation=\"vertical\"\n                android:padding=\"16dp\">\n\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إعدادات التخصيص\"\n                    android:textColor=\"@color/primary\"\n                    android:textSize=\"18sp\"\n                    android:textStyle=\"bold\"\n                    android:gravity=\"center\"\n                    android:layout_marginBottom=\"16dp\" />\n\n                <!-- الثيم الداكن -->\n                <CheckBox\n                    android:id=\"@+id/cb_dark_theme\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"استخدام الثيم الداكن\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- النص الكبير -->\n                <CheckBox\n                    android:id=\"@+id/cb_large_text\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"استخدام نص كبير\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- التباين العالي -->\n                <CheckBox\n                    android:id=\"@+id/cb_high_contrast\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"استخدام تباين عالي\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- إظهار التلميحات -->\n                <CheckBox\n                    android:id=\"@+id/cb_show_tooltips\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إظهار التلميحات\"\n                    android:textSize=\"16sp\" />\n\n            </LinearLayout>\n\n        </com.google.android.material.card.MaterialCardView>\n\n        <!-- قسم إعدادات الأمان -->\n        <com.google.android.material.card.MaterialCardView\n            android:layout_width=\"match_parent\"\n            android:layout_height=\"wrap_content\"\n            android:layout_marginTop=\"16dp\"\n            android:layout_marginBottom=\"16dp\"\n            app:cardCornerRadius=\"12dp\"\n            app:cardElevation=\"4dp\">\n\n            <LinearLayout\n                android:layout_width=\"match_parent\"\n                android:layout_height=\"wrap_content\"\n                android:orientation=\"vertical\"\n                android:padding=\"16dp\">\n\n                <TextView\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"إعدادات الأمان\"\n                    android:textColor=\"@color/primary\"\n                    android:textSize=\"18sp\"\n                    android:textStyle=\"bold\"\n                    android:gravity=\"center\"\n                    android:layout_marginBottom=\"16dp\" />\n\n                <!-- طلب كلمة مرور للتقارير -->\n                <CheckBox\n                    android:id=\"@+id/cb_require_password_reports\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"طلب كلمة مرور للتقارير\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- طلب كلمة مرور للإعدادات -->\n                <CheckBox\n                    android:id=\"@+id/cb_require_password_settings\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"طلب كلمة مرور للإعدادات\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- طلب كلمة مرور للنسخ الاحتياطي -->\n                <CheckBox\n                    android:id=\"@+id/cb_require_password_backup\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"طلب كلمة مرور للنسخ الاحتياطي\"\n                    android:textSize=\"16sp\"\n                    android:layout_marginBottom=\"8dp\" />\n\n                <!-- تسجيل إجراءات المستخدم -->\n                <CheckBox\n                    android:id=\"@+id/cb_log_user_actions\"\n                    android:layout_width=\"match_parent\"\n                    android:layout_height=\"wrap_content\"\n                    android:text=\"تسجيل إجراءات المستخدم\"\n                    android:textSize=\"16sp\" />\n\n            </LinearLayout>\n\n        </com.google.android.material.card.MaterialCardView>\n\n    </LinearLayout>\n\n</ScrollView>\n