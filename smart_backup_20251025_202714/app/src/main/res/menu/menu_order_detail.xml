<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Save Item (Visible in edit mode) -->
    <item
        android:id="@+id/action_save"
        android:title="حفظ"
        android:icon="@drawable/ic_save_24"
        app:showAsAction="ifRoom"
        android:visible="false" />

    <!-- Cancel Item (Visible in edit mode) -->
    <item
        android:id="@+id/action_cancel"
        android:title="إلغاء"
        android:icon="@drawable/ic_close_24"
        app:showAsAction="ifRoom"
        android:visible="false" />

    <!-- Track Order -->
    <item
        android:id="@+id/action_track"
        android:title="تتبع"
        android:icon="@drawable/ic_track_changes_24"
        app:showAsAction="ifRoom" />

    <!-- Share Order -->
    <item
        android:id="@+id/action_share"
        android:title="مشاركة"
        android:icon="@drawable/ic_share_24"
        app:showAsAction="ifRoom" />

    <!-- More Actions -->
    <item
        android:id="@+id/action_more"
        android:title="المزيد"
        android:icon="@drawable/ic_more_vert_24"
        app:showAsAction="always">
        
        <menu>
            <!-- Duplicate Order -->
            <item
                android:id="@+id/action_duplicate"
                android:title="إنشاء نسخة"
                android:icon="@drawable/ic_content_copy_24" />

            <!-- Convert Order -->
            <item
                android:id="@+id/action_convert"
                android:title="تحويل الطلب"
                android:icon="@drawable/ic_transform_24">
                <menu>
                    <item
                        android:id="@+id/action_convert_to_invoice"
                        android:title="تحويل لفاتورة" />
                    <item
                        android:id="@+id/action_convert_to_quote"
                        android:title="تحويل لعرض سعر" />
                    <item
                        android:id="@+id/action_convert_to_receipt"
                        android:title="تحويل لإيصال" />
                </menu>
            </item>

            <!-- Status Change -->
            <item
                android:id="@+id/action_status"
                android:title="تغيير الحالة"
                android:icon="@drawable/ic_assignment_24">
                <menu>
                    <item
                        android:id="@+id/action_confirm"
                        android:title="تأكيد الطلب" />
                    <item
                        android:id="@+id/action_process"
                        android:title="بدء التحضير" />
                    <item
                        android:id="@+id/action_ship"
                        android:title="شحن الطلب" />
                    <item
                        android:id="@+id/action_deliver"
                        android:title="تأكيد التسليم" />
                    <item
                        android:id="@+id/action_cancel_order"
                        android:title="إلغاء الطلب" />
                </menu>
            </item>

