<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.journalentry.JournalEntryDetailActivity">

    <EditText
        android:id="@+id/et_journal_entry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="التاريخ (YYYY-MM-DD)"
        android:inputType="date"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_journal_entry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الوصف"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_journal_entry_reference_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="رقم المرجع"
        android:inputType="text"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_journal_entry_entry_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نوع القيد (مثال: AUTO_INVOICE)"
        android:inputType="textCapWords"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_journal_entry_total_debit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="إجمالي المدين"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_journal_entry_total_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="إجمالي الدائن"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_save_journal_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="حفظ قيد اليومية" />

    <Button
        android:id="@+id/btn_delete_journal_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="حذف قيد اليومية"
        android:backgroundTint="@android:color/holo_red_dark" />

</LinearLayout>
