<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- أيقونة الذكاء الاصطناعي -->
    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/ai_avatar_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_ai_assistant"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <!-- كارد رد الذكاء الاصطناعي -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/ai_message_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- نص الرد -->
            <TextView
                android:id="@+id/textMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="هذا رد تجريبي من الذكاء الاصطناعي مع معلومات مفيدة ومفصلة للمستخدم"
                android:textColor="@color/ai_message_text"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:textIsSelectable="true" />

            <!-- معلومات إضافية -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- درجة الثقة -->
                <TextView
                    android:id="@+id/textConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_confidence_score"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="درجة الثقة: 95%"
                    android:textColor="@color/success"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- مساحة مرنة -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- وقت الاستجابة -->
                <TextView
                    android:id="@+id/textResponseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200 مليثانية"
                    android:textColor="@color/gray_light"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- الاقتراحات الذكية -->
            <LinearLayout
                android:id="@+id/layoutSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اقتراحات ذكية:"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- سيتم إضافة الاقتراحات ديناميكياً هنا -->

            </LinearLayout>

            <!-- التقييم والأزرار -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- التقييم -->
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0" />

                <!-- مساحة مرنة -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- الوقت -->
                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="منذ 3 دقائق"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- أزرار الإجراءات -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- زر النسخ -->
                <Button
                    android:id="@+id/buttonCopy"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_copy"
                    android:drawablePadding="4dp"
                    android:text="نسخ"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

                <!-- زر المشاركة -->
                <Button
                    android:id="@+id/buttonShare"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_share"
                    android:drawablePadding="4dp"
                    android:text="مشاركة"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

                <!-- زر الإشارة المرجعية -->
                <ImageButton
                    android:id="@+id/buttonBookmark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bookmark_border"
                    app:tint="@color/gray_medium" />

                <!-- زر الحذف -->
                <ImageButton
                    android:id="@+id/buttonDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/error" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- مساحة فارغة لمحاذاة الرسالة لليسار -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

</LinearLayout>