<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- مساحة فارغة لمحاذاة الرسالة لليمين -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- كارد رسالة المستخدم -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="40dp"
        app:cardBackgroundColor="@color/user_message_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- نوع المحادثة (إذا كان مختلف عن العام) -->
            <TextView
                android:id="@+id/textConversationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_conversation_type_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="تحليل محاسبي"
                android:textColor="@color/primary"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- نص الرسالة -->
            <TextView
                android:id="@+id/textMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="هذه رسالة تجريبية من المستخدم للذكاء الاصطناعي"
                android:textColor="@color/user_message_text"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <!-- الوقت -->
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:text="منذ 5 دقائق"
                android:textColor="@color/gray_medium"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- أيقونة المستخدم -->
    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="top"
        app:cardBackgroundColor="@color/user_avatar_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

</LinearLayout>