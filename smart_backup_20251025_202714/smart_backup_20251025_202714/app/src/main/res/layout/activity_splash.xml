<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ui.splash.SplashActivity">

    <!-- Background Gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient_background" />

    <!-- Logo Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:cardCornerRadius="@dimen/corner_radius_3xl"
        app:cardElevation="@dimen/elevation_lg"
        app:cardBackgroundColor="?attr/colorSurface">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside" />

    </com.google.android.material.card.MaterialCardView>

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_3xl"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.OnSale.HeadlineMedium"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:text="@string/dashboard_subtitle"
        android:textAppearance="@style/TextAppearance.OnSale.BodyMedium"
        android:textColor="?attr/colorOnPrimary"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/appNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_6xl"
        style="@style/Widget.OnSale.CircularProgressIndicator"
        app:indicatorColor="?attr/colorOnPrimary"
        app:trackColor="?attr/colorPrimaryContainer"
        app:layout_constraintTop_toBottomOf="@id/taglineText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true" />

    <!-- Version Info -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_3xl"
        android:text="@string/version_info"
        android:textAppearance="@style/TextAppearance.OnSale.LabelSmall"
        android:textColor="?attr/colorOnPrimary"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>