<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_row_background"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <!-- الصف الأول: اسم الصنف وكوده -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- اسم الصنف مع الاقتراحات -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/et_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="اسم الصنف"
                android:tag="item"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="14sp"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext" />

            <ImageButton
                android:id="@+id/btn_voice_item_name"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_btn_speak_now"
                android:scaleType="centerInside"
                android:contentDescription="إدخال صوتي لاسم الصنف" />

        </LinearLayout>

        <!-- كود الصنف -->
        <EditText
            android:id="@+id/et_item_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="الكود"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionNext" />

    </LinearLayout>

    <!-- الصف الثاني: الكمية والسعر والإجمالي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- الكمية -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="الكمية"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:imeOptions="actionNext" />

            <ImageButton
                android:id="@+id/btn_voice_quantity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_btn_speak_now"
                android:scaleType="centerInside"
                android:contentDescription="إدخال صوتي للكمية" />

        </LinearLayout>

        <!-- سعر الوحدة -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_unit_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="سعر الوحدة"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:imeOptions="actionNext" />

            <ImageButton
                android:id="@+id/btn_voice_price"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_btn_speak_now"
                android:scaleType="centerInside"
                android:contentDescription="إدخال صوتي للسعر" />

        </LinearLayout>

        <!-- الإجمالي -->
        <EditText
            android:id="@+id/et_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="4dp"
            android:hint="الإجمالي"
            android:background="@drawable/edittext_readonly_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:enabled="false"
            android:textColor="@color/text_primary" />

        <!-- زر الحذف -->
        <ImageButton
            android:id="@+id/btn_remove_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="حذف الصنف"
            android:tint="@color/danger" />

    </LinearLayout>

    <!-- الصف الثالث: وصف الصنف (اختياري) -->
    <LinearLayout
        android:id="@+id/layout_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="وصف الصنف (اختياري)"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:imeOptions="actionNext" />

        <ImageButton
            android:id="@+id/btn_voice_description"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_btn_speak_now"
            android:scaleType="centerInside"
            android:contentDescription="إدخال صوتي للوصف" />

        <ImageButton
            android:id="@+id/btn_toggle_description"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            android:scaleType="centerInside"
            android:contentDescription="إظهار/إخفاء الوصف" />

    </LinearLayout>

    <!-- الصف الرابع: إعدادات إضافية للصنف -->
    <LinearLayout
        android:id="@+id/layout_item_extras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="4dp">

        <!-- وحدة القياس -->
        <Spinner
            android:id="@+id/spinner_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />

        <!-- خصم الصنف -->
        <EditText
            android:id="@+id/et_item_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="خصم %"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:gravity="center" />

        <!-- ضريبة الصنف -->
        <EditText
            android:id="@+id/et_item_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="ضريبة %"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:gravity="center" />

        <!-- زر الإعدادات الإضافية -->
        <ImageButton
            android:id="@+id/btn_item_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:scaleType="centerInside"
            android:contentDescription="إعدادات الصنف" />

    </LinearLayout>

    <!-- زر إظهار/إخفاء التفاصيل الإضافية -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <ImageButton
            android:id="@+id/btn_toggle_extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="المزيد من الخيارات"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المزيد من الخيارات"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="4dp" />

        <!-- زر قراءة تفاصيل الصنف -->
        <ImageButton
            android:id="@+id/btn_read_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="قراءة تفاصيل الصنف"
            android:padding="4dp" />

    </LinearLayout>

    <!-- فاصل بصري -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="8dp" />

</LinearLayout>