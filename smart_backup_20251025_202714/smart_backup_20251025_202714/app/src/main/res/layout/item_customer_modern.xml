<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/status_background"
            android:src="@drawable/ic_notification"
            android:scaleType="centerInside"
            android:padding="12dp"
            tools:src="@drawable/ic_notification" />

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="اسم العميل"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="أحمد محمد العلي" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/statusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="نشط"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    app:chipCornerRadius="12dp"
                    app:chipBackgroundColor="@color/success_container"
                    app:chipStrokeWidth="0dp"
                    tools:text="نشط" />

            </LinearLayout>

            <!-- Phone -->
            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رقم الهاتف"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="+966 50 123 4567" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="البريد الإلكتروني"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="ahmed@example.com" />

            <!-- Address -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العنوان"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="الرياض، المملكة العربية السعودية" />

            <!-- Bottom Row: Last Contact and VIP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lastContactTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="آخر اتصال"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_variant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="آخر اتصال: 15/10/2025" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/vipChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP"
                    android:textSize="10sp"
                    app:chipMinHeight="20dp"
                    app:chipCornerRadius="10dp"
                    app:chipBackgroundColor="@color/tertiary_container"
                    app:chipStrokeWidth="0dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="VIP" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:background="@color/outline_variant"
        android:layout_gravity="bottom" />

</com.google.android.material.card.MaterialCardView>