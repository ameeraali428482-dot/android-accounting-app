<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- شريط الأدوات -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="تفاصيل الفاتورة"
            app:titleTextColor="@android:color/white" />

        <!-- معلومات الشركة -->
        <LinearLayout
            android:id="@+id/layout_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_invoice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فاتورة ضريبية"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="شركة المحاسبة المتقدمة"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الرياض - المملكة العربية السعودية"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- معلومات الفاتورة الأساسية -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="معلومات الفاتورة"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- رقم الفاتورة -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_invoice_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="رقم الفاتورة"
                        android:inputType="textNoSuggestions"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_voice_invoice_number"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:contentDescription="إدخال صوتي لرقم الفاتورة" />

                </LinearLayout>

                <!-- تاريخ الفاتورة -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/et_invoice_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="تاريخ الفاتورة"
                        android:inputType="date"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:focusable="false"
                        android:clickable="true" />

                    <ImageButton
                        android:id="@+id/btn_calendar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_today"
                        android:contentDescription="اختيار التاريخ" />

                </LinearLayout>

                <!-- نوع الفاتورة -->
                <AutoCompleteTextView
                    android:id="@+id/et_invoice_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نوع الفاتورة"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- معلومات العميل -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="معلومات العميل"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_voice_search"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:contentDescription="البحث الصوتي عن العميل" />

                </LinearLayout>

                <!-- اسم العميل -->
                <AutoCompleteTextView
                    android:id="@+id/et_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اسم العميل"
                    android:tag="customer"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- تفاصيل إضافية للعميل -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/et_customer_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="رقم الهاتف"
                        android:inputType="phone"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_customer_tax_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="الرقم الضريبي"
                        android:inputType="number"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- أصناف الفاتورة -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="أصناف الفاتورة"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_add_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إضافة صنف"
                        android:textColor="@android:color/white"
                        android:background="@color/primary"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- رؤوس الأعمدة -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/header_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="اسم الصنف"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الكمية"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="السعر"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="الإجمالي"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>

                <!-- حاوية الأصناف -->
                <LinearLayout
                    android:id="@+id/invoice_items_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- حسابات الفاتورة -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="حسابات الفاتورة"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- المجموع الفرعي -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="المجموع الفرعي:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_sub_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:enabled="false" />

                </LinearLayout>

                <!-- الخصم -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الخصم:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:hint="0.00" />

                </LinearLayout>

                <!-- الضريبة -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ضريبة القيمة المضافة (15%):"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_tax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:enabled="false" />

                </LinearLayout>

                <!-- الإجمالي النهائي -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/total_background"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الإجمالي النهائي:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/et_grand_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_white_background"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:enabled="false" />

                </LinearLayout>

                <!-- المبلغ بالكلمات -->
                <TextView
                    android:id="@+id/tv_total_in_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="المبلغ بالكلمات: ..."
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- الملاحظات -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ملاحظات"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="اكتب ملاحظات إضافية هنا..."
                    android:inputType="textMultiLine"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:gravity="top" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- أزرار العمليات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="حفظ"
                android:textColor="@android:color/white"
                android:background="@color/success"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="معاينة"
                android:textColor="@android:color/white"
                android:background="@color/info"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_print"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="طباعة"
                android:textColor="@android:color/white"
                android:background="@color/warning"
                android:padding="12dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- أزرار إضافية -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مشاركة"
                android:textColor="@android:color/white"
                android:background="@color/secondary"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_read_invoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="قراءة الفاتورة"
                android:textColor="@android:color/white"
                android:background="@color/primary"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="حذف"
                android:textColor="@android:color/white"
                android:background="@color/danger"
                android:padding="12dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>