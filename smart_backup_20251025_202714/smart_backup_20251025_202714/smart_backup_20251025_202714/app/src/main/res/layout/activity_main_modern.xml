<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".ui.main.MainActivity">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="لوحة التحكم"
            app:titleTextColor="@color/on_surface"
            app:menu="@menu/main_toolbar_menu"
            app:navigationIcon="@drawable/ic_notification"
            app:titleCentered="false" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Welcome Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مرحباً بك في نظام المحاسبة 👋"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/dateTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="الثلاثاء، 19 أكتوبر 2025 - 05:08"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Quick Action Chips -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/surface_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الإجراءات السريعة"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/quickChips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:chipSpacingHorizontal="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Statistics Grid -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نظرة عامة على الأعمال"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    
                    android:layout_marginBottom="16dp" />

                <GridLayout
                    android:id="@+id/statsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_marginBottom="24dp">

                    <!-- Total Revenue Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/totalRevenueCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/primary_container"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="إجمالي الإيرادات"
                                android:textSize="12sp"
                                android:textColor="@color/on_primary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/totalRevenueValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0 ر.س"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_primary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="هذا الشهر"
                                android:textSize="10sp"
                                android:textColor="@color/on_primary_container"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Total Customers Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/totalCustomersCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/secondary_container"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="العملاء"
                                android:textSize="12sp"
                                android:textColor="@color/on_secondary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/totalCustomersValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_secondary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="إجمالي"
                                android:textSize="10sp"
                                android:textColor="@color/on_secondary_container"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Total Invoices Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/totalInvoicesCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/tertiary_container"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="الفواتير"
                                android:textSize="12sp"
                                android:textColor="@color/on_tertiary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/totalInvoicesValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_tertiary_container"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="إجمالي"
                                android:textSize="10sp"
                                android:textColor="@color/on_tertiary_container"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Total Products Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/totalProductsCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/surface_container_high"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="المنتجات"
                                android:textSize="12sp"
                                android:textColor="@color/on_surface"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/totalProductsValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="إجمالي"
                                android:textSize="10sp"
                                android:textColor="@color/on_surface"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pending Invoices Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/pendingInvoicesCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/surface"
                        app:strokeColor="@color/error"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="فواتير معلقة"
                                android:textSize="12sp"
                                android:textColor="@color/error"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/pendingInvoicesValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/error"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="تحتاج متابعة"
                                android:textSize="10sp"
                                android:textColor="@color/error"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Low Stock Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/lowStockCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/surface"
                        app:strokeColor="@color/tertiary"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="مخزون منخفض"
                                android:textSize="12sp"
                                android:textColor="@color/tertiary"
                                
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/lowStockValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/tertiary"
                                
                                android:gravity="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="منتجات"
                                android:textSize="10sp"
                                android:textColor="@color/tertiary"
                                
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الإجراءات الرئيسية"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/quickActionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/newInvoiceBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="فاتورة جديدة"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/newCustomerBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="عميل جديد"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/newProductBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="منتج جديد"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPaymentBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="إضافة دفعة"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Third Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/inventoryBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="المخزون"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_notification"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reportsBtn"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="التقارير"
                            android:textSize="14sp"
                            
                            app:icon="@drawable/ic_notification"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Recent Activities Section -->
                <LinearLayout
                    android:id="@+id/recentActivitiesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="النشاطات الحديثة"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        
                        android:layout_marginBottom="16dp" />

                    <!-- Recent activities will be added programmatically -->

                </LinearLayout>

                <!-- Bottom Spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mainFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="@color/on_primary"
        app:backgroundTint="@color/primary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        app:elevation="8dp"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>