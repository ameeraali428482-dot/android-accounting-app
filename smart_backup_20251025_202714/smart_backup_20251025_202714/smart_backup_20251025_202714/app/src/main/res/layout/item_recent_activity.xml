<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_md"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Activity Icon -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"
        style="@style/Widget.OnSale.CardView.Filled"
        app:cardCornerRadius="@dimen/corner_radius_md"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        android:layout_marginEnd="@dimen/spacing_lg">

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_gravity="center"
            android:src="@drawable/ic_bar_chart_24"
            android:contentDescription="@string/activity_icon"
            app:tint="?attr/colorOnPrimaryContainer"
            tools:src="@drawable/ic_bar_chart_24" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Activity Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_activity_title"
            android:textAppearance="@style/TextAppearance.OnSale.TitleSmall"
            android:textColor="?attr/colorOnSurface"
            tools:text="New Sale Created" />

        <TextView
            android:id="@+id/activityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/sample_activity_description"
            android:textAppearance="@style/TextAppearance.OnSale.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Order #12345 for Ahmed Al-Rashid" />

        <TextView
            android:id="@+id/activityTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/sample_activity_time"
            android:textAppearance="@style/TextAppearance.OnSale.LabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="2 hours ago" />

    </LinearLayout>

    <!-- Activity Amount/Status -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/activityAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_amount"
            android:textAppearance="@style/TextAppearance.OnSale.TitleSmall"
            android:textColor="?attr/colorPrimary"
            tools:text="+2,450 ر.س" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activityStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            style="@style/Widget.OnSale.Chip"
            android:text="@string/sample_status"
            android:textSize="10sp"
            app:chipMinHeight="24dp"
            app:chipBackgroundColor="?attr/colorSecondaryContainer"
            android:textColor="?attr/colorOnSecondaryContainer"
            tools:text="Completed" />

    </LinearLayout>

</LinearLayout>