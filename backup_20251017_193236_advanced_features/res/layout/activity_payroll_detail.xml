<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payroll.PayrollDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/payroll_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل كشف المرتب"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الموظف"/>

        <Spinner
            android:id="@+id/employee_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/payroll_date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ كشف المرتب (YYYY-MM-DD)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/payroll_amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="المبلغ"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/payroll_notes_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ملاحظات"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_payroll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ كشف المرتب"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/delete_payroll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف كشف المرتب"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>
